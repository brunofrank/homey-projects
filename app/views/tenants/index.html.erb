<div data-controller="list">
  <div class="list-buttons columns">
    <div class="column">
      <%= link_to new_tenant_path, class: 'button is-primary' do %>
        New
      <% end %>
    </div>
    <div class="column mass-actions" data-list-target="massActionsContainer">
      <button data-action="click->list#destroySelected" data-destroy-url="<%= tenant_url(id: ':id:') %>.json" class="button is-danger">
        Delete
      </button>
    </div>
  </div>

  <table class="table is-striped is-narrow is-hoverable is-fullwidth">
    <thead>
      <tr>
        <th>&nbsp;</th>
        <th>Subdomain</th>
      </tr>
    </thead>
    <tbody>
    <% @tenants.each do |tenant| %>
      <tr data-list-target="items" data-edit-url="<%= edit_tenant_url(tenant) %>">
        <td class="item-check">
          <input type="checkbox" value="<%= tenant.id %>" data-action="change->list#itemSelect">
        </td>
              <td class="clickable" data-action="click->list#edit">
      <%= tenant.subdomain %>
        </td>
              </tr>
    <% end %>
    </tbody>
  </table>
<div>

<%= will_paginate @tenants %>
