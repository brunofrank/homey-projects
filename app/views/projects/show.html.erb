<%= turbo_frame_tag :project_form do %>
  <%= simple_form_for(@project, html: { data: {controller: "form"} }) do |f| %>
    <div class="form-inputs columns">
      <div class="column is-10">
        &nbsp;
      </div>
      <div class="column is-2">
        <%= f.input :status, collection: enum_options_for_select(Project, :statuses),
                             input_html: {
                               data: { action: "change->form#submit" }
                             } %>
      </div>
    </div>
  <% end %>
<% end%>

<div class="mt-6 mb-6">
  <%= render 'comment_form' %>
</div>

<%= turbo_frame_tag :project_comments do %>
  <%= render @project.comments %>
<% end %>