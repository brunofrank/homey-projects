<div data-controller="list">
  <div class="list-buttons columns">
    <div class="column">
      <%= link_to new_project_comment_path(@project), class: 'button is-primary' do %>
        New
      <% end %>
    </div>
    <div class="column mass-actions" data-list-target="massActionsContainer">
      <button data-action="click->list#destroySelected" data-destroy-url="<%= project_comment_url(@project, id: ':id:') %>.json" class="button is-danger">
        Delete
      </button>
    </div>
  </div>

  <table class="table is-striped is-narrow is-hoverable is-fullwidth">
    <thead>
      <tr>
        <th>&nbsp;</th>
        <th>Comment</th>
      </tr>
    </thead>
    <tbody>
    <% @comments.each do |comment| %>
      <tr data-list-target="items" data-edit-url="<%= edit_project_comment_url(@project, comment) %>">
        <td class="item-check">
          <input type="checkbox" value="<%= comment.id %>" data-action="change->list#itemSelect">
        </td>
        <td class="clickable" data-action="click->list#edit">
          <%= comment.content %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<div>

<%= will_paginate @comments %>
